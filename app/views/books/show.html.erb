<div class="body">
  <div class="container">
    <p id="notice"></p>
    <div class="row">
      <div class="col-xs-3">
        <%= render 'layouts/list', user: @user,book: @new_book %>
      </div>
      <div class="col-xs-9">
        <h2>Book detail</h2>
        <table class="table table-striped">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
                <% end %>
                <%= link_to @user.name,user_path(@user.id)%>
              </td>
              <td><%=@book.title%></td>
              <td><%=@book.body %></td>
              <td><% if @book.user == current_user %>
                  <%= link_to "Edit", edit_book_path(@book)%>
                  <%= link_to "Destroy", book_path(@book), method: :delete %>
                  <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>