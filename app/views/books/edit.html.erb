<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h1>Editing Book</h1>
			<%= render 'layouts/error',object:@book %>

			<%= form_for(@book) do |f| %>
			<div class="field row">
				<h4>Title</h4>
				<%= f.text_field :title ,class:"col-xs-12"%>
			</div>
			<div class="field row">
				<h4>Opinion</h4>
				<%= f.text_area :body ,class:"col-xs-12" %>
			</div>
			<div class="actions row">
				<%= f.submit 'Update Book',class:"col-xs-12 btn btn-primary" %>
			</div>
			<% end %>

			<%= link_to "Show", book_path(@book)%>|
			<%= link_to "Back", books_path%>
		</div>
	</div>
</div>